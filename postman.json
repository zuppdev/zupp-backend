
{
    "info": {
        "name": "Headless CMS API",
        "description": "Complete API collection for Vapor Headless CMS with authentication and article management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/",
                    "host": ["{{base_url}}"],
                    "path": [""]
                }
            },
            "response": []
        },
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('jwt_token', response.token);",
                                    "    console.log('JWT Token saved:', response.token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "register"]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('jwt_token', response.token);",
                                    "    console.log('JWT Token saved:', response.token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "login"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Articles (Public)",
            "item": [
                {
                    "name": "Get All Published Articles",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/articles",
                            "host": ["{{base_url}}"],
                            "path": ["articles"]
                        }
                    }
                },
                {
                    "name": "Get Article by Slug",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/articles/my-first-post",
                            "host": ["{{base_url}}"],
                            "path": ["articles", "my-first-post"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Articles (Admin)",
            "item": [
                {
                    "name": "Create Article",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"My First Article\",\n  \"slug\": \"my-first-article\",\n  \"content\": \"<h1>Welcome to my blog!</h1><p>This is my first article with <strong>rich HTML content</strong>. I can include images, links, and much more!</p><blockquote>This is a quote</blockquote><ul><li>List item 1</li><li>List item 2</li></ul>\",\n  \"excerpt\": \"This is a short description of my first article for preview purposes.\",\n  \"published\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/articles",
                            "host": ["{{base_url}}"],
                            "path": ["articles"]
                        }
                    }
                },
                {
                    "name": "Update Article",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Article Title\",\n  \"slug\": \"updated-article-slug\",\n  \"content\": \"<h1>Updated Content</h1><p>This article has been updated with new content!</p>\",\n  \"excerpt\": \"Updated excerpt for the article\",\n  \"published\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/articles/ARTICLE_ID_HERE",
                            "host": ["{{base_url}}"],
                            "path": ["articles", "ARTICLE_ID_HERE"]
                        }
                    }
                },
                {
                    "name": "Delete Article",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/articles/ARTICLE_ID_HERE",
                            "host": ["{{base_url}}"],
                            "path": ["articles", "ARTICLE_ID_HERE"]
                        }
                    }
                }
            ]
        }
    ]
}
